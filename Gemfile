# A sample Gemfile
source "https://rubygems.org"

gem 'sinatra'
gem 'thin'
gem 'require_all'
gem 'activerecord', '4.2.5'
gem 'sinatra-activerecord'

group :development do
	gem 'shotgun'
	gem 'pry'
	gem 'sqlite3'
	gem 'tux'	#interactive console preloads db
end

group :test do
  gem 'rspec'
  gem 'capybara'
  gem 'rack-test'
end


